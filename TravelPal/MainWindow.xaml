<Window x:Class="TravelPal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="TravelPal - Sign in" Height="450" Width="450" FontSize="20" Background="MediumSlateBlue" WindowStartupLocation="CenterScreen">
    <Border Padding="20">
        <StackPanel>
            <Label Content="TravelPal" FontSize="54" FontFamily="Arial"/>
            <TextBlock Text="Sign In" FontSize="36"/>
            <TextBlock Text="Username" Margin="0, 20, 0, 0"/>
            <TextBox Name="tbUsername" Style="{StaticResource travelPalTextBoxes}"/>
                <TextBlock Text="Password" Margin="0, 20, 0, 0"/>
            <PasswordBox Name="pbPassword" Style="{StaticResource travelPassPasswordBoxes}"/>
            <StackPanel Orientation="Horizontal" Margin="0, 40, 0, 0">
                <Button Name="btnSignIn" IsDefault="True" Content="Sign In" Width="120" Style="{StaticResource travelPalButtons}" Click="btnSignIn_Click"/>
                <Button Name="btnRegister" Content="Register" Margin="20, 0, 0 ,0" Width="120" Style="{StaticResource travelPalButtons}" Click="btnRegister_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
