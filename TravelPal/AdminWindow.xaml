<Window x:Class="TravelPal.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="AdminWindow" Height="620" Width="680" FontSize="20" Background="MediumSlateBlue" WindowStartupLocation="CenterScreen">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Name="txtWelcome" Text="Cool Admin View" FontSize="32"/>
            <Button Name="btnSignOut" HorizontalAlignment="Left" Content="Sign Out" Width="140" Margin="0, 20, 0, 0" Style="{StaticResource travelPalButtons}" Click="btnSignOut_Click"/>
            <TextBlock Text="All travels" FontSize="30" Margin="0, 20, 0, 0"/>
            <ListView Name="lvTravels" Height="320" Style="{StaticResource travelPalListView}"/>
            <StackPanel Orientation="Horizontal" Margin="0, 20, 0 , 20">
                <Button Name="btnTravelRemove" Content="Remove" Width="140" Margin="0, 0, 40, 0" Style="{StaticResource travelPalButtons}" Click="btnTravelRemove_Click"/>
                <Button Name="btnTravelDetails" Content="Details" Width="140" Style="{StaticResource travelPalButtons}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
